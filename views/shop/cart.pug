extends ../layouts/default.pug

block content
  .cell.small-12
    h2.margin-bottom-2 #{pageTitle}

    if cartProducts
      .grid-x.grid-padding-x
        each product in cartProducts
          .cell.small-12
            .grid-x.grid-padding-x.small-up-1.medium-up-3.align-center
              .cell
                table.hover.sriped.stack
                  thead
                    td Product name
                    td Quantity
                    td
                  tbody
                    tr
                      td 
                        a(href=`/products/${product.productData.id}`) #{product.productData.title}
                      td #{product.qty}
                      td
                        form(action="/cart-delete-item" method="POST")
                          input(type="hidden" name="productID" value=product.productData.id)
                          button.alert.button(type="submit") Delete


