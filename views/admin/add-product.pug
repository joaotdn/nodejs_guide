extends ../layouts/default.pug

block content 
  .cell.small-12
    h2.margin-bottom-2 #{pageTitle}
  .cell.small-12
    form(action="/admin/add-product" method="POST")
      p
        input(type="text" name="title" placeholder="Product name", required)
      p
        input(type="text" name="imageUrl" placeholder="Image URL", required)
      p
        input(type="number" name="price" placeholder="Price", step="0.0", required)
      p
        textarea(name="description", rows="10", placeholder="Description" required)
      p
        button.button(type="submit") ADD